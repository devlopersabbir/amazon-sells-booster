{
  "name": "extension",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "rm -rf dist && vite",
    "build": "tsc && vite build",
    "zip:chrome": "bun run build:chrome && tsx ./zip.ts",
    "zip:firefox": "bun run build:firefox && tsx ./zip.ts",
    "build:chrome": "cross-env TARGET=chrome tsc && vite build",
    "build:firefox": "cross-env TARGET=firefox tsc && vite build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "lucide-react": "^0.507.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/webextension-polyfill": "^0.12.3",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.4",
    "typescript": "~5.6.3",
    "vite": "^5.0.0",
    "vite-plugin-web-extension": "^4.0.0",
    "webextension-polyfill": "^0.10.0",
    "zip-a-folder": "^3.1.9"
  }
}
